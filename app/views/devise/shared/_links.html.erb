<div class="auth-shared-links">
  <%- if controller_name != 'sessions' %>
    <p class="auth-link-text">
      <%= t('devise.shared.links.have_account', default: 'Already have an account?') %>
      <%= link_to t('devise.shared.links.sign_in', default: 'Log in'), new_session_path(resource_name), class: 'auth-link-accent' %>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="auth-link-text">
      <%= t('devise.shared.links.no_account', default: "Don't have an account?") %>
      <%= link_to t('devise.shared.links.sign_up', default: 'Sign up'), new_registration_path(resource_name), class: 'auth-link-accent' %>
    </p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t('devise.shared.links.forgot_password', default: "Forgot your password?"), new_password_path(resource_name), class: 'auth-link-secondary' %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('devise.shared.links.confirmation', default: "Didn't receive confirmation instructions?"), new_confirmation_path(resource_name), class: 'auth-link-secondary' %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('devise.shared.links.unlock', default: "Didn't receive unlock instructions?"), new_unlock_path(resource_name), class: 'auth-link-secondary' %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to t('devise.shared.links.sign_in_with', provider: OmniAuth::Utils.camelize(provider), default: "Sign in with #{OmniAuth::Utils.camelize(provider)}"), omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'btn-auth-oauth' %>
    <% end %>
  <% end %>
</div>
