  <div class="auth-content-wrapper">
    <!-- Logo -->
    <div class="auth-logo-section">
      <%= link_to root_path do %>
        <%= image_tag "logo.png", alt: "idiomary logo", class: "auth-logo" %>
      <% end %>
    </div>

    <!-- Auth Card -->
    <div class="auth-card">
      <h2 class="auth-title"><%= t('devise.sessions.new.sign_in', default: 'Log in') %></h2>
      <p class="auth-subtitle"><%= t('devise.sessions.new.subtitle', default: 'Welcome back! Please enter your details.') %></p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'auth-form' }) do |f| %>
        <!-- Email Field -->
        <div class="auth-field">
          <%= f.label :email, class: 'auth-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'auth-input', placeholder: 'your@email.com' %>
        </div>

        <!-- Password Field -->
        <div class="auth-field">
          <%= f.label :password, class: 'auth-label' %>
