        </div>

        <!-- Remember Me & Forgot Password Row -->
        <div class="auth-options-row">
          <% if devise_mapping.rememberable? %>
            <div class="auth-checkbox">
              <%= f.check_box :remember_me, id: 'remember_me' %>
              <%= f.label :remember_me, t('devise.sessions.new.remember_me', default: 'Remember me'), for: 'remember_me' %>
            </div>
          <% end %>

          <% if devise_mapping.recoverable? %>
            <%= link_to t('devise.sessions.new.forgot_password', default: 'Forgot password?'), new_password_path(resource_name), class: 'auth-link-small' %>
          <% end %>
        </div>

        <!-- Submit Button -->
        <div class="auth-actions">
          <%= f.submit t('devise.sessions.new.sign_in', default: 'Log in'), class: 'btn-auth-primary' %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="auth-footer-links">
        <%= render "devise/shared/links" %>
      </div>
