<div class="container">
  <div class="hero">
    <h1><%= t('site.title') %></h1>
    <p class="tagline"><%= t('site.tagline') %></p>

    <%= link_to t('home.start_searching'), search_path, class: "btn btn-primary" %>
  </div>

  <div class="features">
    <div class="feature">
      <h3><%= t('home.search_idioms') %></h3>
      <p><%= t('home.search_desc') %></p>
    </div>

    <div class="feature">
      <h3><%= t('home.multiple_languages') %></h3>
      <p><%= t('home.languages_desc') %></p>
    </div>

    <% if user_signed_in? %>
      <div class="feature">
        <h3><%= t('home.your_dictionary') %></h3>
        <p><%= link_to t('home.view_saved'), my_dictionary_path %></p>
      </div>
    <% else %>
      <div class="feature">
        <h3><%= t('home.save_favorites') %></h3>
        <p><%= link_to t('nav.sign_up'), new_user_registration_path %> <%= t('home.signup_to_save') %></p>
      </div>
    <% end %>
  </div>
</div>
